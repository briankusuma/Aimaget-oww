.section.sec-login
    .container.con-login
        .frame-content-regis
            .content-image-regis
                img(src="/assets/img-registration.png" alt="Login Image").img-regis
            .content-form-regis
                .form-content-regis
                    .form-content-title
                        h1 Log in to Aimaget
                        span Don't have an account yet?
                            a Create new Account
                    .form-button-link
                        button
                            img(src="/assets/ic-google.svg" alt="icon Image")
                            span Log in with Google
                        button
                            img(src="/assets/ic-facebook.svg" alt="icon Image")
                            span Log in with Facebook
                    .form-sparator
                        .line-sparator
                        span Or log in with
                        .line-sparator
                    form
                        input.input-form(type="text" placeholder="Email or mobile phone number")
                        input.input-form(type="text" placeholder="password")
                        span Forgot Password?
                        button.button-input(type="input") Sign In